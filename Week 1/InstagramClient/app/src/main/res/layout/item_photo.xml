<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        >

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ivUserAvatar"
            android:src="@drawable/avatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvUserName"
            android:text="User Name"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="left|center"
            android:padding="5dp"

            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivUserAvatar"
            android:layout_toEndOf="@+id/ivUserAvatar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvCreateTimes"
            android:text="10h"
            android:textStyle="bold"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivUserAvatar"
            android:layout_toEndOf="@+id/ivUserAvatar" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:minHeight="50dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:gravity="center"

        android:layout_below="@+id/ivPhoto"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â™¥ 123456789 likes"
            android:id="@+id/tvLikes"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="left|center"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Textakljs alksjd aklsjd alksjd askljda slkasd l;kasjd askldjasbd asdui"
            android:id="@+id/tvCaption"
            android:ellipsize="end"
            android:layout_below="@+id/tvLikes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>